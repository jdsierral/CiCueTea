set(SEP " ========= ")
execute_process(COMMAND sh -c "git rev-parse --short HEAD > ${CMAKE_CURRENT_SOURCE_DIR}/GIT_COMMIT")
execute_process(COMMAND sh -c "git describe --tags --abbrev=0 > ${CMAKE_CURRENT_SOURCE_DIR}/GIT_TAG")
execute_process(COMMAND sh -c "git branch --show-current > ${CMAKE_CURRENT_SOURCE_DIR}/GIT_BRANCH")
execute_process(COMMAND sh -c "git log -1 --pretty=format:'%s' > ${CMAKE_CURRENT_SOURCE_DIR}/GIT_COMMIT_MESSAGE")
execute_process(COMMAND sh -c "git log -1 --pretty=format:'%cd' --date=format:'%Y-%m-%d' > ${CMAKE_CURRENT_SOURCE_DIR}/GIT_COMMIT_DATE")
execute_process(COMMAND sh -c "git log -1 --pretty=format:'%cd' --date=format:'%H.%M.%S' > ${CMAKE_CURRENT_SOURCE_DIR}/GIT_COMMIT_TIME")
file(STRINGS ${CMAKE_CURRENT_SOURCE_DIR}/GIT_COMMIT CURRENT_GIT_COMMIT)
file(STRINGS ${CMAKE_CURRENT_SOURCE_DIR}/GIT_TAG CURRENT_GIT_TAG)
file(STRINGS ${CMAKE_CURRENT_SOURCE_DIR}/GIT_BRANCH CURRENT_GIT_BRANCH)
file(STRINGS ${CMAKE_CURRENT_SOURCE_DIR}/GIT_COMMIT_MESSAGE CURRENT_GIT_COMMIT_MESSAGE)
file(STRINGS ${CMAKE_CURRENT_SOURCE_DIR}/GIT_COMMIT_DATE CURRENT_GIT_COMMIT_DATE)
file(STRINGS ${CMAKE_CURRENT_SOURCE_DIR}/GIT_COMMIT_TIME CURRENT_GIT_COMMIT_TIME)